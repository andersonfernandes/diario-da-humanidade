<%= simple_form_for @post do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :titulo, required: true %>
    </div>

    <div class="col-md-6 text-center">
      <%= f.input :anonimo, label: 'Post AnÃ´nimo?' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.input :texto, required: true, label: false, input_html: { class: 'summernote' } %>
