<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="content text-center">
          <h3 class="text-left">Resultados da busca para: <%= @search %></h3>
          <div class="row">
            <% @result.each do |post| %>
              <div class="col-md-4">
                <%= render partial: 'posts/post_card',
                         locals: { post: post } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
