<div class="container text-center">
  <div class="row">
    <div class="col-md-12">
        <div class="card">
          <div class="content">
            <h3>Todos Posts</h3>

            <div class="row">
              <% @posts.each do |post| %>
                <div class="col-md-4">
                  <%= render partial: 'posts/post_card',
                           locals: { post: post } %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
