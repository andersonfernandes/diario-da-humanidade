<!doctype html>
<html lang="en-us">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <%= csrf_meta_tags %>

    <title>Di√°rio da Humanidade</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag '//fonts.googleapis.com/icon?family=Material+Icons' %>
    <%= stylesheet_link_tag '//fonts.googleapis.com/css?family=Roboto:300,400,500,700' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>
  <body>
    <header>
      <%= render 'layouts/menu' %>
    </header>

    <main>
      <%= render 'layouts/flash_messages' %>
      <%= yield %>

      <div class="fixed-fab">
        <%= link_to new_post_path, class: 'btn btn-primary btn-raised btn-fab btn-round', title: 'Novo Post' do %>
          <i class="material-icons">add</i>
        <% end if usuario_signed_in? %>
      </div>
    </main>
  </body>
</html>
