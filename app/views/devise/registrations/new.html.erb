<div class="container">
  <div class="row">
    <div class="col-md-12">
        <div class="card">
          <div class="header header-primary text-center">
            <h4>Criar conta</h4>
          </div>

          <div class="content">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :name, required: true, autofocus: true %>
                </div>
                <div class="col-md-6">
                  <%= f.input :email, required: true %>
                </div>
              </div>


              <div class="row">
                <div class="col-md-6">
                  <%= f.input :password, required: true %>
                </div>
                <div class="col-md-6">
                  <%= f.input :password_confirmation, required: true %>
                </div>
              </div>

              <%= f.button :submit, "Criar", class: 'btn-raised btn-success pull-right',
                            data: { disable_with: 'Criando...' } %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
